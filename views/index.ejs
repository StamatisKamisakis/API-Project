<!-- Define the HTML document type and language -->
<!DOCTYPE html>
<html lang="en">
<!-- Define the head section of the HTML document -->
<head>
  <!-- Set the character encoding for the HTML document -->
  <meta charset="UTF-8">
  <!-- Set the viewport settings for the HTML document -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Set the title of the HTML document -->
  <title>Weather Checker</title>
  <!-- Link to an external CSS stylesheet -->
  <link rel="stylesheet" href="public/styles.css">
</head>
<!-- Define the body section of the HTML document -->
<body>
  <!-- Display a heading with the text "Check Tomorrow's Weather" -->
  <h1>Check Tomorrow's Weather</h1>
  <!-- Define a form to submit a GET request to the /weather endpoint -->
   <img src="https://img.freepik.com/premium-photo/girl-checks-weather-forecast-mobile-application_101969-2820.jpg?w=1060" alt="weatherApp" height="400px" width="500px">
  <form action="/weather" method="get">
    <!-- Define an input field to enter a city name -->
    <input type="text" name="city" placeholder="Enter city" required>
    <!-- Define a submit button to submit the form -->
    <button type="submit">Check Weather</button>
  </form>
  <!-- Use EJS template tags to conditionally render weather data -->
  <% if (typeof weatherData !== 'undefined') { %>
    <!-- Display the city name and weather data -->
    <h2>Weather in <%= weatherData.name %></h2>
    <p>Temperature: <%= weatherData.main.temp %>Â°C</p>
    <p>Weather: <%= weatherData.weather[0].description %></p>
    <a href="/">Go back</a>
  <% } %>
</body>
</html>